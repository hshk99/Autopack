# Autopack Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for LLM integration)
OPENAI_API_KEY=sk-your-key-here

# Database Configuration (optional, defaults provided)
DATABASE_URL=postgresql://autopack:autopack@localhost:5432/autopack

# Repository Path (for git operations)
REPO_PATH=/workspace

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Run Defaults
RUN_TOKEN_CAP=5000000
RUN_MAX_PHASES=25
RUN_MAX_DURATION_MINUTES=120
