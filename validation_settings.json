{
  "validation": {
    "enabled": true,
    "strict_mode": true,
    "version": "1.0.0"
  },
  "rules": {
    "required_fields": [
      "name",
      "version",
      "category"
    ],
    "allowed_categories": [
      "configuration",
      "testing",
      "deployment",
      "development"
    ],
    "complexity_levels": [
      "low",
      "medium",
      "high"
    ]
  },
  "schema_validation": {
    "yaml_files": {
      "enabled": true,
      "schema_version": "draft-07",
      "validate_structure": true
    },
    "json_files": {
      "enabled": true,
      "schema_version": "draft-07",
      "validate_structure": true
    }
  },
  "error_handling": {
    "fail_on_error": true,
    "fail_on_warning": false,
    "log_validation_errors": true,
    "max_errors_before_abort": 10
  },
  "output": {
    "format": "json",
    "include_warnings": true,
    "include_suggestions": true,
    "verbose": false
  },
  "performance": {
    "cache_validation_results": true,
    "parallel_validation": false,
    "timeout_seconds": 60
  }
}
