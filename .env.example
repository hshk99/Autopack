# Database Configuration
POSTGRES_DB=autopack
POSTGRES_USER=autopack
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_PORT=5432

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=change-this-secret-key-in-production-use-long-random-string

# Service Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Database URL (auto-constructed from above, but can override)
# DATABASE_URL=postgresql://autopack:password@postgres:5432/autopack

# Optional: External Database
# DATABASE_URL=postgresql://user:pass@external-host:5432/dbname

# Optional: Disable specific features
# ENABLE_ANTHROPIC=false
